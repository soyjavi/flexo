h1, h2, h3, h4, h5, h6, p
  font-weight               : inherit
  margin-top                : 0
  margin-bottom             : UNIT

h1
  font-size                 : 3.25 * UNIT
  line-height               : 100%
  letter-spacing            : -.1rem
h2
  font-size                 : 2.75 * UNIT
  line-height               : 1.25
  letter-spacing            : -.1rem
h3
  font-size                 : 2.3 * UNIT
  line-height               : 1.3
  letter-spacing            : -.1rem
h4
  font-size                 : 1.9 * UNIT
  line-height               : 1.35
  letter-spacing            : -.08rem
h5
  font-size                 : 1.5 * UNIT
  line-height               : 1.5
  letter-spacing            : -.05rem
h6
  font-size                 : 1.1 * UNIT
  line-height               : 1.6
  letter-spacing            : 0

code
  padding                   : (UNIT / 5) (UNIT / 3)
  margin                    : 0 (UNIT / 10)
  font-size                 : FONT_SIZE_SMALL
  white-space               : nowrap

pre > code
  display                   : block
  padding                   : (UNIT / 2) UNIT
  white-space               : pre
