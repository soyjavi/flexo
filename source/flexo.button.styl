.button, button, input[type="submit"], input[type="reset"], input[type="button"]
  display                     : inline-block
  height                      : 38px
  padding                     : 0 30px
  margin-bottom               : 1rem
  color                       : #555
  text-align                  : center
  font-size                   : 11px
  font-weight                 : 600
  line-height                 : 38px
  letter-spacing              : .1rem
  text-transform              : uppercase
  text-decoration             : none
  white-space                 : nowrap
  background-color            : transparent
  cursor                      : pointer
  box-sizing                  : border-box
  &:hover, &:focus
    outline                   : 0
