// -- CONSTANTS ----------------------------------------------------------------
FONT_FAMILY                 = "Raleway"
UNIT                        = 1rem
FONT_WEIGHT_NORMAL          = 400
FONT_SIZE                   = 1.6 * UNIT
FONT_SIZE_TINY              = 1.2 * UNIT
FONT_SIZE_SMALL             = 1.4 * UNIT
LINE_HEIGHT                 = 2.4 * UNIT
FORM_HEIGHT                 = 3.2 * UNIT

// -- BASE ---------------------------------------------------------------------
html
  font-size                 : 62.5%

body
  font-size                 : FONT_SIZE
  line-height               : LINE_HEIGHT
  font-weight               : FONT_WEIGHT_NORMAL
  font-family               : "Raleway", "HelveticaNeue", "Helvetica Neue", Helvetica, Arial, sans-serif

.container
  position                  : relative
  width                     : 90%
  max-width                 : 960px
  margin                    : 0 auto
  padding                   : 0

.row
  display                   : block

.container, .row
  &:after
    content                 : ""
    display                 : table
    clear                   : both

.align
  &.left
    text-align: left
  &.center
    text-align: center
  &.right
    text-align: right
