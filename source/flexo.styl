// -- CONSTANTS ----------------------------------------------------------------
FONT-SIZE                   = 1.5em
FONT-FAMILY                 = "Raleway"
FONT-WEIGHT-NORMAL          = 400
FONT-SIZE-TINY              = 72.5%
FONT-SIZE-SMALL             = 90%
UNIT                        = 1rem
FORM-HEIGHT                 = (3.5 * UNIT)

// -- BASE ---------------------------------------------------------------------
html
  font-size                 : 62.5%

body
  font-size                 : FONT-SIZE
  line-height               : 1.6
  font-weight               : FONT-WEIGHT-NORMAL
  font-family               : "Raleway", "HelveticaNeue", "Helvetica Neue", Helvetica, Arial, sans-serif

.container
  position                  : relative
  width                     : 80%
  max-width                 : 960px
  margin                    : 0 auto
  padding                   : 0

.row
  display                   : block

.container, .row
  &:after
    content                 : ""
    display                 : table
    clear                   : both

.align
  &.left
    text-align: left
  &.center
    text-align: center
  &.right
    text-align: right

input, textarea, select, fieldset, .row
  margin-bottom             : (1.5 * UNIT)

pre, blockquote, form, dl, figure, table, p, ul, ol, form
  margin-bottom             : (2 * UNIT)
