// -- CONSTANTS ----------------------------------------------------------------
FONT_FAMILY                 = "Raleway"
FONT_SIZE                   = 1.5rem
FONT_SIZE                   = 15px
FONT_WEIGHT_NORMAL          = 400
FONT_SIZE_TINY              = 72.5%
FONT_SIZE_SMALL             = 90%
LINE_HEIGHT                 = 1.5rem
LINE_HEIGHT                 = 24px
UNIT                        = 1rem
FORM_HEIGHT                 = (2.5 * UNIT)

// -- BASE ---------------------------------------------------------------------
body
  font-size                 : FONT_SIZE
  line-height               : LINE_HEIGHT
  font-weight               : FONT_WEIGHT_NORMAL
  font-family               : "Raleway", "HelveticaNeue", "Helvetica Neue", Helvetica, Arial, sans-serif

.container
  position                  : relative
  width                     : 90%
  max-width                 : 960px
  margin                    : 0 auto
  padding                   : 0

.row
  display                   : block

.container, .row
  &:after
    content                 : ""
    display                 : table
    clear                   : both

.align
  &.left
    text-align: left
  &.center
    text-align: center
  &.right
    text-align: right
